@{
    ViewData["Title"] = "Thông Báo";
}
<style>
 

    .card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
    }

    .card-body {
        padding: 20px;
    }

    .alert {
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .alert-success {
        background-color: #e7f9ee;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
<div class="container mt-4">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Bán hàng/</span> In hóa đơn
    </h4>
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex justify-content-between align-items-center">
                    <span>@TempData["SuccessMessage"]</span>
                    <button id="printButton" class="btn btn-primary btn-sm" onclick="openInvoice()">In Hóa Đơn</button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
</div>

<script>
    function openInvoice() {
        const fileUrl = '@TempData["FileUrl"]'; // Lấy URL của file PDF
        window.open(fileUrl, '_blank'); // Mở file PDF trong tab mới
    }
</script>