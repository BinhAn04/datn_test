@model AppData.Model.NhanVien

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Chỉnh Sửa Thông Tin Nhân Viên</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditProfile" enctype="multipart/form-data">
                <input asp-for="IdNhanVien" type="hidden" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="TenNhanVien" class="form-label fw-bold">Họ và Tên</label>
                        <input asp-for="TenNhanVien" class="form-control" placeholder="Nhập tên nhân viên" />
                        <span asp-validation-for="TenNhanVien" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SoDienThoai" class="form-label fw-bold">Số Điện Thoại</label>
                        <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DiaChi" class="form-label fw-bold">Địa Chỉ</label>
                        <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Ảnh Nhân Viên Hiện Tại</label>
                        @if (!string.IsNullOrEmpty(Model.AnhNhanVien))
                        {
                            <div class="mt-2">
                                <img src="~/Admin/imgNV/@Model.AnhNhanVien" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">Chưa có ảnh</div>
                        }
                    </div>

                    <div class="col-md-6">
                        <label for="imgFile" class="form-label fw-bold">Chọn Ảnh Mới</label>
                        <input type="file" name="imgFile" class="form-control" />
                        <span asp-validation-for="AnhNhanVien" class="text-danger"></span>
                    </div>
                </div>

                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">Lưu Thông Tin</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>