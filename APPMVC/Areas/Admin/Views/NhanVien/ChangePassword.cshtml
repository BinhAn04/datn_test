@model AppData.Model.NhanVien

@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<h2 class="text-center mb-4">Đổi Mật Khẩu</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                @using (Html.BeginForm("ChangePassword", "NhanVien", FormMethod.Post, new { @class = "needs-validation", novalidate = "" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Hiển thị thông báo lỗi tổng quan -->
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Mật khẩu mới -->
                    <div class="form-group mb-3">
                        <label class="form-label" for="newPassword">
                            <i class="fa fa-lock"></i> Mật khẩu mới
                        </label>
                        @Html.Password("newPassword", null, new { @class = "form-control", @id = "newPassword", placeholder = "Nhập mật khẩu mới" })
                        @Html.ValidationMessage("newPassword", "", new { @class = "text-danger" })
                    </div>

                    <!-- Xác nhận mật khẩu -->
                    <div class="form-group mb-3">
                        <label class="form-label" for="confirmPassword">
                            <i class="fa fa-check-circle"></i> Xác nhận mật khẩu
                        </label>
                        @Html.Password("confirmPassword", null, new { @class = "form-control", @id = "confirmPassword", placeholder = "Nhập lại mật khẩu mới" })
                        @Html.ValidationMessage("confirmPassword", "", new { @class = "text-danger" })
                    </div>

                    <!-- Nút xác nhận -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Đổi Mật Khẩu
                        </button>
                    </div>
                }

                <!-- Thông báo thành công -->
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3" role="alert">
                        <i class="fa fa-check"></i> @ViewBag.Message
                    </div>
                }

                <!-- Thông báo lỗi -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        <i class="fa fa-exclamation-triangle"></i> Có lỗi xảy ra. Vui lòng kiểm tra lại thông tin.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Thêm thư viện FontAwesome và Bootstrap (nếu chưa có) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />