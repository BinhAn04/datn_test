@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<h2 class="text-center mb-4">Quên Mật Khẩu</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                @using (Html.BeginForm("ForgotPassword", "NhanVien", FormMethod.Post, new { @class = "needs-validation", novalidate = "" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Hiển thị thông báo lỗi tổng quan -->
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Email nhập vào -->
                    <div class="form-group mb-3">
                        <label class="form-label" for="email">
                            <i class="fa fa-envelope"></i> Nhập email của bạn
                        </label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Nhập email của bạn" required />
                        @Html.ValidationMessage("email", "", new { @class = "text-danger" })
                    </div>

                    <!-- Nút gửi mã xác thực -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-paper-plane"></i> Gửi mã xác thực
                        </button>
                    </div>
                }

                <!-- Thông báo lỗi khi có lỗi -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        <i class="fa fa-exclamation-triangle"></i> Có lỗi xảy ra. Vui lòng kiểm tra lại thông tin.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Thêm thư viện FontAwesome và Bootstrap (nếu chưa có) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
